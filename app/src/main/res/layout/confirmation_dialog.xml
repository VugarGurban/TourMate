<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:padding="20dp">

    <ImageView
        android:id="@+id/confirm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_confirmation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large_small"
        android:text="@string/positive_response"
        android:textColor="@color/text_color"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toBottomOf="@+id/confirm_image"
        app:layout_constraintStart_toStartOf="@+id/confirm_image"
        app:layout_constraintEnd_toEndOf="@+id/confirm_image"/>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:backgroundTint="@color/button_background"
        android:text="@string/ok"
        android:textColor="@color/button_textcolor"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/confirmation_text"
        app:layout_constraintStart_toStartOf="@id/confirmation_text"
        app:layout_constraintEnd_toEndOf="@id/confirmation_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>